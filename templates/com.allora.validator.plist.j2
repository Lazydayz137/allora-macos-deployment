<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.allora.validator</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>{{ ansible_env.HOME }}/go/bin/allorad</string>
        <string>start</string>
        <string>--home</string>
        <string>{{ ansible_env.HOME }}/.allorad</string>
    </array>
    
    <key>WorkingDirectory</key>
    <string>{{ ansible_env.HOME }}/.allorad</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:{{ ansible_env.HOME }}/go/bin</string>
        <key>HOME</key>
        <string>{{ ansible_env.HOME }}</string>
    </dict>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>
    
    <key>StandardOutPath</key>
    <string>{{ ansible_env.HOME }}/Library/Logs/allora-validator.log</string>
    
    <key>StandardErrorPath</key>
    <string>{{ ansible_env.HOME }}/Library/Logs/allora-validator-error.log</string>
    
    <key>ProcessType</key>
    <string>Background</string>
</dict>
</plist>
